#include <iostream>
using namespace std;
int main()
{
    int capital, tasa, anio, interes;
    cout<<"ingrese el valor del capital..";
    cin>>capital; 
    cout<<"ingrese el valor de la tasa..";
    cin>>tasa;
    cout<<"ingrese el valor del anio..";
    cin>>anio; 
    interes=capital*tasa*anio;
    cout<<"el interes ganado es; "<<interes;
    
    return 0;
}
