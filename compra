#include <iostream>
using namespace std;

int main()
{
   float monto, bono=0, total=monto;
   do
   {
   cout<<"ingrese el monto de la compra: ";
   cin>>monto;
       if(monto<=300)
       while(monto<=0);
   }  
       if(monto>300)
       {
       bono=monto*0.10;
        total=monto-bono;
       cout<<"se aplica un bono del 10%: bs. "<<bono<<endl;
       }
       else{
           cout<<"no aplica bono "<<endl;
       }
       cout<<"total final a pagar: bs. "<<total<<endl;
       cout<<"monto del bono: bs."<<bono<<endl;
    return 0;
}
